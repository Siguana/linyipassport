<?xml version="1.0" encoding="utf-8"?>
<layout name="desktop">
	<!--Extra css load for this layout-->
	<stylesheets>
		<file media="all">css/layout.css</file>
		<file media="all">css/template.css</file>
		<file media="all">css/setting.css</file>
		<file media="all">css/extensions.css</file>
		<file media="all">css/virtuemart.css</file>
	</stylesheets>
	<scripts>
		<file>js/login-script.js</file>
		<content>jQuery.noConflict();</content>
	</scripts>

	<blocks name="top" style="xhtml">
		<block name="cpanel" type="usertools/cpanel"></block>
		<block name="header" type="header"></block>
		<block name="mainnav" type="mainnav"></block>
		<block name="navhelper">breadcrumbs</block>
		<block name="slider" type="spotlight">slider1,slider2</block>
		<block name="portfolio">portfolio</block>
		<block name="topsl" type="spotlight">feat1,feat2,feat3,feat4</block>
		<block name="latest">latest-product</block>
		<block name="promo" main-inner="1">promo</block>
	</blocks>
	<blocks name="middle" colwidth="30">
		<block name="content-mass-top" type="spotlight">content-top1,content-top2,content-top3</block>
		<block name="content-top">content-top4</block>		
		<block name="content-bottom">content-bottom1</block>
		<block name="content-mass-bottom" type="spotlight">content-bottom2,content-bottom3,content-bottom4</block>			
		<block name="right1" width="30">right</block>
	</blocks>
	<blocks name="bottom" style="xhtml">
		<block name="botsl" type="spotlight" special="left" specialwidth="38">bottom1,bottom2,bottom3,bottom4</block>
 		<block name="footer" type="footer"></block>
		<block name="popOverlay" type="popOverlay" no-wrap="1" no-main="1"></block>
	</blocks>
</layout>